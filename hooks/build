#!/bin/bash

STABLEVERSION=$(curl https://gunthy.trade/tag)

TAGS="stable-${STABLEVERSION},"

IFS=',' read -ra tags <<< "${TAGS}"
TAG_COMMAND=""

for tag in "${tags[@]}"
do
    TAG_COMMAND="${TAG_COMMAND} -t ${DOCKER_REPO}:${tag}"
done

docker build \
    --build-arg BUILD_DATE=`date -u +"%Y-%m-%dT%H:%M:%SZ"` \
    --file "${DOCKERFILE_PATH}" \
    ${TAG_COMMAND} .
